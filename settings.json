{
    "editor.fontFamily": "Doid, 'Times New Roman', Consolas, 'Courier New', monospace",
    "editor.fontSize": 20.01,
    
    "workbench.colorTheme": "Black on White",
    
    "breadcrumbs.enabled": false,
