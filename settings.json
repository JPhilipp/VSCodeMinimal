                    "entity.other.inherited-class",

                    "punctuation.definition.comment",
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end",
                    "punctuation.separator",
                    "punctuation.separator.continuation",
                    "punctuation.terminator",

                    "keyword",
                    "keyword.control",
                    "keyword.operator",
                    "keyword.operator.new",
                    "keyword.operator.assignment",
                    "keyword.operator.arithmetic",
                    "keyword.operator.logical",
                    "keyword.other",                    

                    "constant",
                    "constant.character",
                    "constant.character.escape",
                    "constant.numeric",
                    "constant.numeric.integer",
                    "constant.numeric.float",
                    "constant.numeric.hex",
                    "constant.numeric.octal",
                    "constant.other",
                    "constant.regexp",
                    "constant.rgb-value",

                    "variable",
                    "variable.language",
                    "variable.name",
                    "variable.other",
                    "variable.other.readwrite",
                    "variable.parameter",
                ],
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "string",
                    "string.interpolated",
                    "string.other",
                    "string.quoted",
                    "string.quoted.double",
                    "string.quoted.other",
                    "string.quoted.single",
                    "string.quoted.triple",
                    "string.regexp",
                    "string.unquoted",

                    "comment",
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#636363"
                }
            },
            {
                "scope": [
                    "meta.preprocessor",
                ],
                "settings": {
                    "fontStyle": "",
                    "foreground": "#818181"
                }
            }
        ]
    },

    "workbench.colorCustomizations": {
        "[Black on White]": {
            "editor.lineHighlightBackground": "#ffffff",
            "editorError.foreground":   "#ff000000",
        },

        "activityBar.background": "#fff",
        "activityBar.foreground": "#bbb",
        "activityBarBadge.background": "#fff",
        "activityBarBadge.foreground": "#bbb",

        "editorGutter.modifiedBackground": "#0000",
        "editorGutter.addedBackground": "#0000",
        "editorGutter.deletedBackground": "#0000",
    },

    "editor.matchBrackets": false,
    "files.autoSave": "off",

    "editor.autoClosingBrackets": false,
    "window.menuBarVisibility": "toggle",
    "workbench.iconTheme": null,

    "git.path": "C:\\Users\\philipp\\AppData\\Local\\GitHubDesktop\\app-2.2.0\\resources\\app\\git\\cmd",
    "gitlens.currentLine.enabled": false,
    "git.enableSmartCommit": true,
    "files.exclude": {
        "**/*.meta": true
    },
    "workbench.tree.indent": 30,
    "editor.codeLens": false,
    "workbench.activityBar.visible": true,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,

    "editor.folding": false,
    "editor.fontLigatures": false
